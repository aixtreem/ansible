---
- name: Création user ede et désactivation accès root SSH
  hosts: esphome
  become: true

  tasks:
    - name: Créer l'utilisateur ede
      ansible.builtin.user:
        name: ede
        state: present
        shell: /bin/bash

    - name: Désactiver l’accès SSH pour root
      ansible.builtin.lineinfile:
        path: /etc/ssh/sshd_config
        regexp: '^PermitRootLogin'
        line: 'PermitRootLogin no'
        state: present
        backup: yes

    - name: Redémarrer SSHD pour appliquer les changements
      ansible.builtin.service:
        name: sshd
        state: restarted

